<main>
  <p id="notice"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <%= render 'books/info', user: @user %>
          <%= render 'books/new', book: @book %>
        </div>

        <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
          <table class="table">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @books.each do |user_image| %>
              <tr>
                <td><%= image_tag user_image.get_profile_image(100,100) %></td>
                <td><p><%= user_image.name %></p></td>
                <td>
                  <%= link_to user_path(user_image.id) do %>
                    <p>Show</p>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</main>
