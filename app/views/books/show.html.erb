<main>
  <div>
    <p><%= flash[:notice] %></p>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
      <%= render 'info', user: @books.user %>
      <%= render 'new', book: @book %>
      </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@books.user_id) do %>
                  <%= image_tag @books.user.get_profile_image(100,100) %><br>
                  <%= @books.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@books) do %>
                  <%= @books.title %>
                <% end %>
                </td>
              <td><%= @books.body %></td>
              <% if @books.user.id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@books.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</main>